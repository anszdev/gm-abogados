<button aria-label="Abrir o cerrar menu de navegaciÃ³n" class="button">
  <div class="hamburger" id="nav-icon">
    <span class="line top"></span>
    <span class="line bottom"></span>
  </div>
</button>
<style>
  .button {
    display: block;
    padding: 0.7rem 1.5rem;
    border-radius: 9999px;
    border: 3px solid var(--gm-bg-secondary);
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.7);
    z-index: 20;

    @media screen and (width >= 1100px) {
      display: none;
    }
  }

  .hamburger {
    width: 2rem;
    height: 2rem;
    position: relative;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .line {
    position: absolute;
    width: 100%;
    height: 3px;
    border-radius: 4px;
    transition: transform 0.3s ease-in-out;
    background-color: var(--gm-primary);
  }

  .top {
    transform: translateY(-4px);
  }

  .bottom {
    transform: translateY(4px);
  }

  .open .top {
    transform: rotate(-45deg);
  }

  .open .bottom {
    transform: rotate(45deg);
  }
</style>
<script>
  const $navMenu = document.querySelector("#nav-icon");
  $navMenu?.addEventListener("click", () => {
    ($navMenu as HTMLElement).classList.toggle("open");
  });
</script>
