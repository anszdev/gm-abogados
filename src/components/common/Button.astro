---
interface Props {
  href?: string;
  ariaLabel?: string;
  widthComplete?: boolean;
  itsA: "link" | "button";
  type?: "button" | "submit";
  onclick?: string;
}

const {
  href = "#contacto",
  ariaLabel = "Contactar",
  widthComplete = false,
  itsA = "link",
  type = "button",
  onclick,
} = Astro.props;
---

{
  itsA === "link" && (
    <a
      href={href}
      class="gm_button"
      style={`display: ${widthComplete ? "block" : "inline-block"}`}
      role="button"
      aria-label={ariaLabel}
    >
      <span class="gm_button-text">
        <slot />
      </span>
    </a>
  )
}

{
  itsA === "button" && (
    <button
      class="gm_button"
      style={`display: ${widthComplete ? "block" : "inline-block"}`}
      role="button"
      aria-label={ariaLabel}
      type={type}
      onclick={onclick}
    >
      <span class="gm_button-text">
        <slot />
      </span>
    </button>
  )
}

<style>
  .gm_button {
    padding: 1rem 2rem;
    border-radius: 9999px;
    background: linear-gradient(to right, var(--gm-primary), #35597c);
    box-shadow: 0 0.4em 1em rgba(0, 0, 0, 0.1);
    transition: transform 150ms ease-in-out;
    text-align: center;
    cursor: pointer;
    text-decoration: none;
    border: none;

    &:hover {
      transform: scale(1.03);
    }

    &:active {
      transform: scale(0.97);
    }

    @media screen and (width >= 768px) {
      display: inline-block;
    }
  }

  .gm_button-text {
    color: white;
    font-size: 1.125rem;
    font-weight: 500;
    text-align: center;
  }
</style>
