---
const { href } = Astro.props;
---

<a href={href} class="button" role="button">
  <span class="button-text">
    <slot />
  </span>
</a>

<style>
  .button {
    position: relative;
    display: block;
    padding: 1rem 2rem;
    border-radius: 9999px;
    background: linear-gradient(to right, var(--gm-primary), #35597c);
    box-shadow: 0 0.4em 1em rgba(0, 0, 0, 0.1);
    transition: transform 150ms ease-in-out;
    text-align: center;
  }

  .button:active {
    transform: scale(0.95);
  }

  .button-text {
    color: white;
    font-size: 1.125rem;
    font-weight: 500;
    text-align: center;
  }
</style>
