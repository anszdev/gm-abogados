---
interface Button {
  href: string;
  ariaLabel: string;
  widthComplete?: boolean;
}

const { href, ariaLabel, widthComplete = false } = Astro.props;
---

<a
  href={href}
  class="gm_button"
  style={`display: ${widthComplete ? "block" : "inline-block"}`}
  role="button"
  aria-label={ariaLabel}
>
  <span class="gm_button-text">
    <slot />
  </span>
</a>

<style>
  .gm_button {
    padding: 1rem 2rem;
    border-radius: 9999px;
    background: linear-gradient(to right, var(--gm-primary), #35597c);
    box-shadow: 0 0.4em 1em rgba(0, 0, 0, 0.1);
    transition: transform 150ms ease-in-out;
    text-align: center;
    cursor: pointer;

    @media screen and (width >= 768px) {
      display: inline-block;
    }
  }

  .gm_button:active {
    transform: scale(0.95);
  }

  .gm_button-text {
    color: white;
    font-size: 1.125rem;
    font-weight: 500;
    text-align: center;
  }
</style>
