---
interface Props {
  align?: "left" | "center";
}

const { align = "left" } = Astro.props;
---

<h2 class={`gm_section-title ${align === "center" ? "text-center" : ""}`}>
  <slot />
</h2>
<style>
  .gm_section-title {
    font-family: var(--gm-family-title);
    color: var(--gm-title-text);
    font-weight: 600;
    line-height: 1.1;
    text-wrap: pretty;
    font-size: 2rem;

    &.text-center {
      text-align: center;
      margin: 0 auto;
    }

    @media screen and (width >= 768px) {
      font-size: 2.8rem;
      max-width: 50rem;
    }

    @media screen and (width >= 1024px) {
      font-size: 4.3rem;
      max-width: 56rem;
    }
  }
</style>
