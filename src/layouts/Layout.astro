---
import "../styles/global.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/merriweather";
import { Toaster } from "react-hot-toast";
---

<!doctype html>
<html lang="es">
  <head>
    <!-- ============================================ -->
    <!-- METADATOS BÁSICOS -->
    <!-- ============================================ -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />

    <!-- ============================================ -->
    <!-- SEO FUNDAMENTAL -->
    <!-- ============================================ -->
    <title>
      Abogado Despido Injustificado CDMX | Asesoría Gratis - +150 Casos Ganados
    </title>

    <meta
      name="description"
      content="Abogado laboralista especializado en despido injustificado en CDMX. Consulta gratis, no pagas si no ganamos. +150 casos ganados recuperando liquidaciones. Agenda hoy."
    />

    <!-- Canonical -->
    <link rel="canonical" href="https://gm-abogados.com.mx/" />

    <!-- Hreflang -->
    <link rel="alternate" hreflang="es-mx" href="https://gm-abogados.com.mx/" />
    <link rel="alternate" hreflang="es" href="https://gm-abogados.com.mx/" />

    <!-- ============================================ -->
    <!-- ROBOTS Y CRAWLING -->
    <!-- ============================================ -->
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />

    <!-- ============================================ -->
    <!-- GEO Y LOCALIZACIÓN -->
    <!-- ============================================ -->
    <meta name="geo.region" content="MX-CMX" />
    <meta name="geo.placename" content="Ciudad de México" />
    <meta name="geo.position" content="19.4326;-99.1332" />
    <meta name="ICBM" content="19.4326, -99.1332" />

    <!-- ============================================ -->
    <!-- AUTOR Y EMPRESA -->
    <!-- ============================================ -->
    <meta
      name="author"
      content="Lic. Jonathan Ian González Mora - GM Abogados Laboralistas"
    />
    <meta name="copyright" content="GM Abogados Laboralistas" />
    <meta name="language" content="es-MX" />

    <!-- ============================================ -->
    <!-- OPEN GRAPH (Facebook, LinkedIn, WhatsApp) -->
    <!-- ============================================ -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_MX" />
    <meta property="og:site_name" content="GM Abogados Laboralistas" />
    <meta property="og:url" content="https://gm-abogados.com.mx/" />
    <meta
      property="og:title"
      content="Abogado Despido Injustificado CDMX | Consulta Gratis - No Pagas Si No Ganamos"
    />
    <meta
      property="og:description"
      content="Recupera tu liquidación sin pagar por adelantado. +150 casos ganados en CDMX. Primera consulta 100% gratis. Especialistas en despido injustificado."
    />
    <meta
      property="og:image"
      content="https://gm-abogados.com.mx/og-image.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="GM Abogados Laboralistas - Especialistas en Despido Injustificado CDMX"
    />

    <!-- ============================================ -->
    <!-- TWITTER CARDS -->
    <!-- ============================================ -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@GMAbogadosMX" />
    <meta
      name="twitter:title"
      content="Abogado Despido Injustificado CDMX | Consulta Gratis"
    />
    <meta
      name="twitter:description"
      content="Recupera tu liquidación con abogados expertos. +150 casos ganados. No pagas si no ganamos. Agenda consulta gratis."
    />
    <meta
      name="twitter:image"
      content="https://gm-abogados.com.mx/og-image.jpg"
    />

    <!-- ============================================ -->
    <!-- FAVICONS Y APP ICONS -->
    <!-- ============================================ -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1f3b5a" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#1f3b5a" />

    <!-- ============================================ -->
    <!-- MOBILE OPTIMIZATION -->
    <!-- ============================================ -->
    <meta name="format-detection" content="telephone=yes" />
    <meta name="handheldFriendly" content="true" />
    <meta name="MobileOptimized" content="320" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="GM Abogados" />

    <!-- ============================================ -->
    <!-- PRECONNECT PARA PERFORMANCE -->
    <!-- ============================================ -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />

    <!-- ============================================ -->
    <!-- SCHEMA.ORG - LOCAL BUSINESS (PRINCIPAL) -->
    <!-- ============================================ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "@id": "https://gm-abogados.com.mx/#organization",
        "name": "GM Abogados Laboralistas",
        "alternateName": "González Mora Abogados Laboralistas",
        "url": "https://gm-abogados.com.mx",
        "logo": {
          "@type": "ImageObject",
          "url": "https://gm-abogados.com.mx/gm-logo.jpg",
          "width": 600,
          "height": 600
        },
        "image": "https://gm-abogados.com.mx/gm-logo.jpg",
        "description": "Despacho de abogados laboralistas especializado en despido injustificado en Ciudad de México. Más de 150 casos ganados. Consulta gratuita. Solo cobramos si ganamos tu caso.",
        "telephone": "+52-55-6601-1051",
        "email": "contacto@gm-abogados.com.mx",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Av. Insurgentes Sur 1234",
          "addressLocality": "Ciudad de México",
          "addressRegion": "CDMX",
          "postalCode": "03100",
          "addressCountry": "MX"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "19.4326",
          "longitude": "-99.1332"
        },
        "areaServed": [
          {
            "@type": "City",
            "name": "Ciudad de México"
          },
          {
            "@type": "State",
            "name": "Estado de México"
          }
        ],
        "priceRange": "$$",
        "paymentAccepted": "Cash, Credit Card, Transfer",
        "currenciesAccepted": "MXN",
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday"
            ],
            "opens": "09:00",
            "closes": "19:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Saturday",
            "opens": "10:00",
            "closes": "14:00"
          }
        ],
        "sameAs": [
          "https://www.facebook.com/GMAbogadosLaboralistas",
          "https://www.linkedin.com/company/gm-abogados-laboralistas",
          "https://www.instagram.com/gmabogadoslaboralistas"
        ],
        "founder": {
          "@type": "Person",
          "name": "Jonathan Ian González Mora",
          "jobTitle": "Abogado Laboralista",
          "alumniOf": "Universidad Nacional Autónoma de México"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5.0",
          "reviewCount": "150",
          "bestRating": "5",
          "worstRating": "1"
        },
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Servicios Legales Laborales",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Despido Injustificado",
                "description": "Representación legal completa en casos de despido injustificado. Recuperación de liquidación, indemnización y prestaciones.",
                "provider": {
                  "@type": "LegalService",
                  "name": "GM Abogados Laboralistas"
                }
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Acoso Laboral y Discriminación",
                "description": "Defensa legal en casos de acoso laboral, hostigamiento sexual y discriminación en el trabajo.",
                "provider": {
                  "@type": "LegalService",
                  "name": "GM Abogados Laboralistas"
                }
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Recuperación de Prestaciones",
                "description": "Reclamación de horas extras, aguinaldo, vacaciones y otras prestaciones no pagadas.",
                "provider": {
                  "@type": "LegalService",
                  "name": "GM Abogados Laboralistas"
                }
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Accidentes Laborales",
                "description": "Asesoría y representación en casos de riesgos de trabajo y accidentes laborales.",
                "provider": {
                  "@type": "LegalService",
                  "name": "GM Abogados Laboralistas"
                }
              }
            }
          ]
        }
      }
    </script>

    <!-- ============================================ -->
    <!-- SCHEMA.ORG - FAQ PAGE -->
    <!-- ============================================ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "¿Me despidieron sin liquidación, qué hago?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Si te despidieron sin pagarte liquidación, NO firmes ningún documento sin asesoría legal. Tienes derecho a reclamar: 3 meses de salario (indemnización constitucional), 20 días de salario por cada año trabajado (prima de antigüedad), aguinaldo, vacaciones y salarios caídos. Solo tienes 2 meses para demandar desde la fecha del despido."
            }
          },
          {
            "@type": "Question",
            "name": "¿Cuánto tiempo tengo para demandar por despido injustificado?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Tienes solo 2 meses (60 días naturales) contados desde el día siguiente a tu despido para presentar tu demanda laboral. Si se vence el plazo, pierdes tu derecho legal a reclamar tu liquidación."
            }
          },
          {
            "@type": "Question",
            "name": "¿Cuánto cuesta un abogado laboralista?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "En GM Abogados trabajamos sin costo inicial. Solo cobramos un porcentaje si ganamos tu caso. La consulta inicial es 100% gratuita. Si no recuperas dinero, no pagas nada."
            }
          },
          {
            "@type": "Question",
            "name": "¿Cuánto dinero me corresponde por despido injustificado?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Tu liquidación incluye: 3 meses de salario (indemnización constitucional), 20 días de salario por cada año trabajado, aguinaldo proporcional, vacaciones no disfrutadas más prima vacacional, y salarios caídos. El monto depende de tu salario y años trabajados."
            }
          }
        ]
      }
    </script>

    <!-- ============================================ -->
    <!-- SCHEMA.ORG - BREADCRUMB -->
    <!-- ============================================ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Inicio",
            "item": "https://gm-abogados.com.mx/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Despido Injustificado",
            "item": "https://gm-abogados.com.mx/#despido-injustificado"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Contacto",
            "item": "https://gm-abogados.com.mx/#contact"
          }
        ]
      }
    </script>

    <!-- ============================================ -->
    <!-- SCHEMA.ORG - ATTORNEY (Abogado) -->
    <!-- ============================================ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Attorney",
        "name": "Lic. Jonathan Ian González Mora",
        "image": "https://gm-abogados.com.mx/abogado-gonzalez.jpg",
        "jobTitle": "Abogado Laboralista",
        "worksFor": {
          "@type": "LegalService",
          "name": "GM Abogados Laboralistas"
        },
        "alumniOf": {
          "@type": "EducationalOrganization",
          "name": "Universidad Nacional Autónoma de México"
        },
        "knowsAbout": [
          "Derecho Laboral",
          "Despido Injustificado",
          "Ley Federal del Trabajo",
          "Derecho Procesal Laboral",
          "Seguridad Social"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Ciudad de México",
          "addressRegion": "CDMX",
          "addressCountry": "MX"
        }
      }
    </script>

    <!-- ============================================ -->
    <!-- SCHEMA.ORG - WEBSITE SEARCH (Google Sitelinks) -->
    <!-- ============================================ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "GM Abogados Laboralistas",
        "url": "https://gm-abogados.com.mx",
        "potentialAction": {
          "@type": "SearchAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://gm-abogados.com.mx/buscar?q={search_term_string}"
          },
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body>
    <slot />
    <Toaster client:only />
  </body>
</html>
