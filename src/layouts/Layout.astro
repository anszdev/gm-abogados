    <!-- Schema.org para Professional Service -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "GM Abogados Laboralistas",
        "@id": "https://gm-abogados.com.mx",
        "founder": {
          "@type": "Person",
          "name": "Jonathan Ian González Mora",
          "jobTitle": "Abogado Laboralista"
        },
        "description": "Bufete de abogados especializado en derecho laboral, con enfoque en casos de despido injustificado y protección de derechos laborales.",
        "knowsAbout": [
          "Derecho Laboral",
          "Despido Injustificado",
          "Negociación de Liquidaciones",
          "Derechos Laborales",
          "Asesoría Legal Laboral"
        ]
      }
    </script>
  </head>
  <body>
    <slot />
    <Toaster client:only />
  </body>
</html>
